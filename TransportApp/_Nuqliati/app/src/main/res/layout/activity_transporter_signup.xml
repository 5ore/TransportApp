<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fivecore.nuqliati.transporter_signup"
    android:background="#D3D3D3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/survey_step3"
        android:id="@+id/imageView8"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingLeft="10dp"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Address"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="City"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="State"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText6"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="Postcode"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:layout_below="@+id/editText7"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:layout_marginTop="13dp"
         />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignStart="@+id/editText8"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="12dp"
        android:background="#ffffff"

        />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/round_button"
        android:text="CONTINUE"
        android:textSize="10sp"
        android:layout_marginBottom="15dp"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/nuqaliati_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

</RelativeLayout>
