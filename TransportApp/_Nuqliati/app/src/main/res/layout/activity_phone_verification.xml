<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fivecore.nuqliati.phone_verification"
    android:background="#D3D3D3">
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Please enter your phone number to send you a code."
        android:textSize="25sp"
        android:textAlignment="center"
        android:id="@+id/textView4"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your bills and orders will be automatically sent to this number."
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        />
    <Button
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:background="@drawable/round_button"
        android:text="NEXT"
        android:id="@+id/button2"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginBottom="21dp"
        style="@style/Theme.App.Base"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/survey_step1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/nuqaliati_logo"
        android:layout_above="@+id/imageView6"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginBottom="22dp" />


</RelativeLayout>
