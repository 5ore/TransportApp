<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fivecore.nuqliati.survey"
    android:background="@drawable/survey_background">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="I am a..."
    android:textSize="45sp"
    android:textColor="#B3000000"
    android:layout_marginTop="69dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/textView" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/person_circle"
        android:layout_alignBaseline="@+id/btnTransporter"
        android:layout_alignBottom="@+id/btnTransporter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:id="@+id/btnShipper" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transporter"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnTransporter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnTransporter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/truck_circle">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipper"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/btnShipper"
        android:layout_alignEnd="@+id/btnShipper" />

</RelativeLayout>
